{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "target": "ES2017",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"],

}
